= image_tag "top_banner.png", alt: "Admission site", class: "banner-img", width: "1080", height: "214"
%nav.navbar.navbar-default{:role => "navigation"}
  .container-fluid
    .navbar-header
      %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => "/"} Register
    / Collect the nav links, forms, and other content for toggling
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav
      %ul.nav.navbar-nav.navbar-right
        %li
          %a{href: "/about"} About
        %li
          %a{href: "/help"} Help
        %li
          %a{href: "/contact"} Contact
        %li
          %a{:href => "#"} Link
        - if user_signed_in?
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              %span{class: "glyphicon glyphicon-user"}
              %span.caret
            %ul.dropdown-menu{:role => "menu"}
              %li
                %a{:href => "#"} Action
              %li
                %a{:href => "#"} Another action
              %li
                =link_to "Edit password", edit_user_registration_path
              %li.divider
              %li
                =link_to "Sign out", destroy_user_session_path, method: "delete", data: {confirm: "Are you sure to sign out ?"}
        -else
          %li
            =link_to "Sign up", sign_up_path, "data-no-turbolink" => true
          %li
            =link_to "Sign in", sign_in_path
